<% if post.likes.none? { |like| like.user_id == session[:user_id] }%>
  <%= form_for @like, class: "save-scroll" do |form| %>
    <%= form.hidden_field :post_id, :value => "#{post.id}" %>
    <%= form.hidden_field :user_id, :value => session[:user_id] %>
    <%= form.submit "Like", class: "like-button" %>
  <% end %>
<% else %>
  <%= form_for @like, class: "save-scroll", method: :delete do |form| %>
    <%= form.hidden_field :post_id, :value => "#{post.id}" %>
    <%= form.hidden_field :user_id, :value => session[:user_id] %>
    <%= form.submit "Unlike", class: "like-button" %>
  <% end %>
<% end %>
